---
import type {CollectionEntry} from 'astro:content';

interface Props {
    project: CollectionEntry<'blog'>;
}

const {data, slug} = Astro.props.project;
---

<div class="lg:flex">
    <img class="object-cover w-full h-32 rounded-lg lg:w-64" src={data.img}
         alt={data.img_alt || ''} loading="lazy" decoding="async" alt="">

    <div class="flex flex-col lg:mx-6">
        <a href={`/blog/${slug}`} class="text-xl font-semibold text-white-800 hover:underline dark:text-black ">
            {data.title}
        </a>
        <p>
            {data.description}
        </p>
    </div>
</div>
